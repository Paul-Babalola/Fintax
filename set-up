                                    <li>‚Ä¢ Launch Pro Tier</li>
                                    <li>‚Ä¢ Marketing Campaign (SEO/Social)</li>
                                    <li>‚Ä¢ Add Export to PDF/CSV</li>
                                    <li>‚Ä¢ Mobile App Wrapper</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Interactive SWOT -->
                <h3 class="text-xl font-bold text-gray-800 mb-4">SWOT Analysis (Click to Explore)</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    ${projectData.swot.map(item => `
                        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 cursor-pointer hover:bg-gray-50 transition" onclick="alert('${item.desc} (Simulated Expansion)')">
                            <div class="flex items-center mb-2">
                                <span class="w-3 h-3 rounded-full mr-2 ${
                                    item.type === 'strength' ? 'bg-green-500' : 
                                    item.type === 'weakness' ? 'bg-orange-500' : 
                                    item.type === 'opportunity' ? 'bg-blue-500' : 'bg-red-500'
                                }"></span>
                                <h4 class="font-bold capitalize text-gray-800">${item.type}</h4>
                            </div>
                            <h5 class="text-lg font-semibold text-gray-700 mb-1">${item.title}</h5>
                            <p class="text-sm text-gray-500">${item.desc}</p>
                        </div>
                    `).join('')}
                </div>
            `;
            contentContainer.innerHTML = html;
        }

        // --- CHARTS INITIALIZATION ---

        function initRadarChart() {
            const ctx = document.getElementById('radarChart').getContext('2d');
            
            // Destroy existing chart if present to prevent overlap
            if(currentChart) currentChart.destroy();

            currentChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Market Relevance', 'Actionability', 'Tech Simplicity', 'Monetization Potential', 'Competition Level'],
                    datasets: [{
                        label: 'Project Score',
                        data: [9, 8.5, 7, 8, 6],
                        backgroundColor: 'rgba(20, 184, 166, 0.2)', // Teal-500
                        borderColor: 'rgba(13, 148, 136, 1)', // Teal-600
                        pointBackgroundColor: 'rgba(13, 148, 136, 1)',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' },
                            grid: { color: '#e5e7eb' },
                            pointLabels: {
                                font: { size: 12, family: 'Inter' },
                                color: '#4b5563'
                            },
                            suggestedMin: 0,
                            suggestedMax: 10
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        function initMarketBarChart() {
            const ctx = document.getElementById('marketBarChart').getContext('2d');
            if(currentChart) currentChart.destroy();

            currentChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Potential Users (Millions)', 'Est. Annual Growth (%)'],
                    datasets: [
                        {
                            label: 'USA (Freelancers)',
                            data: [57, 15],
                            backgroundColor: 'rgba(59, 130, 246, 0.7)', // Blue
                            borderColor: 'rgba(59, 130, 246, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Nigeria (SMEs)',
                            data: [41, 25], // Adjusted hypothetical SME data
                            backgroundColor: 'rgba(16, 185, 129, 0.7)', // Green
                            borderColor: 'rgba(16, 185, 129, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f3f4f6' }
                        },
                        x: {
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + (context.dataIndex === 0 ? 'M' : '%');
                                }
                            }
                        }
                    }
                }
            });
        }

        function initRevenueChart() {
            const ctx = document.getElementById('revenueChart').getContext('2d');
            if(currentChart) currentChart.destroy();

            currentChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Q1', 'Q2', 'Q3', 'Q4', 'Q5', 'Q6', 'Q7', 'Q8'],
                    datasets: [{
                        label: 'Revenue Growth ($)',
                        data: [0, 500, 2500, 8000, 15000, 28000, 45000, 72000],
                        borderColor: '#0f766e',
                        backgroundColor: 'rgba(20, 184, 166, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f3f4f6' }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // --- MOBILE MENU LOGIC ---
        mobileMenuBtn.addEventListener('click', () => {
            const isClosed = sidebar.classList.contains('-translate-x-full');
            if(isClosed) {
                sidebar.classList.remove('-translate-x-full');
                sidebarOverlay.classList.remove('hidden');
            } else {
                sidebar.classList.add('-translate-x-full');
                sidebarOverlay.classList.add('hidden');
            }
        });

        sidebarOverlay.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            sidebarOverlay.classList.add('hidden');
        });

        // --- INITIAL RENDER ---
        document.addEventListener('DOMContentLoaded', () => {
            loadView('executive');
        });

    </script>
</body>
</html>